:host {
  display block
}

.card
  height 90px
  display flex
  flex-direction row
  align-items center
  border 1px solid #F5F5F5

.card__avatar
  padding-left 25px
  padding-right 20px

.card__details
  padding-right 20px
  flex 1

.card__title
  font-size 16px
  line-height 25px
  margin 0

/deep/ .card__link a
  font-size 14px
  line-height 21px
  margin 0
  text-decoration none
  color #A5A5A5

.card__button
  padding-right 20px
